
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Referral {
  id        Int     @id @default(autoincrement())
  referrerName    String
  referrerEmail   String   @unique
  referrerPhone   String?
  referrerID      String?
  refereeName     String?
  refereeEmail    String @unique
  refereePhone    String
  createdAt DateTime @default(now())
}