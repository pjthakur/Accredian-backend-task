datasource db {
  provider = "mysql"
  url      = "mysql://root:1234@localhost:3306/referral"
}

generator client {
  provider = "prisma-client-js"
}

model Referral {
  id        Int     @id @default(autoincrement())
  referrerName    String
  referrerEmail   String   @unique
  referrerPhone   String?
  referrerID      String?
  refereeName     String?
  refereeEmail    String @unique
  refereePhone    String
  createdAt DateTime @default(now())
}